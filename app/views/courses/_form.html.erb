

<div class="container">
  <div class="row center sign-up-form">
	<div class="col s12 m12 l12">
		<div class="card-panel">
		  <h3 class="header"><%= @course.new_record? ? "Add new course" : "Edit course" %></h3>
		  <div class="row">
			<%= form_for(@course, html: {class: "col s12"}) do |f| %>
			  <div class="row">
			  	<div class="input-field col s12">
				  <%= f.text_field :short_name, placeholder: "Enter your full name", autofocus: true %>
				  <%= f.label :short_name, class: "active" %>
			    </div>
			  </div>
			  
			  <div class="row">
			  	<div class="input-field col s12">
				  <%= f.text_field :name, placeholder: "Enter a name" %>
				  <%= f.label :name, class: "active" %>
				</div>
			  </div>

			  <div class="row">
			  	<div class="input-field col s12">
			  	  <%= f.text_area :description, placeholder: "Enter a description", id: 'textarea1', class: "materialize-textarea" %>
			  	  <%= f.label :description, class: "active" %>
			  	</div>
			  </div>

			  <div class="row">
			  	<div class="input-field col s12">
			  	  <%= f.button "Submit", class: "btn waves-effect waves-light" %>
			  	</div>
			  </div>

			<% end %>
		  </div>
		</div>
	</div>
  </div>
</div>
